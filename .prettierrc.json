{
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "none",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"proseWrap": "never",
	"overrides": [
    {
      "files": "*.yml",
      "options": {
		"useTabs": false,
		"tabWidth": 2
      }
    }
  ]
}
